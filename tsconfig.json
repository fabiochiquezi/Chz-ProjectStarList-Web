{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
        "components/*": ["./components/*"],
        "context/*": ["./context/*"],
        "firebase/*": ["./firebase/*"],
        "data/*": ["./general/data/*"],
        "styles/*": ["./general/styles/*"],
        "types/*": ["./general/types/*"],
        "helpers/*": ["./helpers/*"],
        "pages/*": ["./pages/*"],
        "public/*": ["./public/*"],
        "sections/*": ["./sections/*"],
        "store/*": ["./store/*"],
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "**/*.jsx", "**/*.js"],
  "exclude": [
        "node_modules",
        ".firebase",
        "coverage",
        "deploy",
        "design",
        "emulators-data",
        "cypress",
        "**/*.cy.ts",
        "**/*.cy.js",
        "**/*.test.ts",
        "**/*.test.tsx",
        "**/*.test.js",
        "**/*.test.jsx",
    ]
}
